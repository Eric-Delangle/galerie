{% extends 'base.html.twig' %}

{% block title %}Votre espace
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="brun mt-3">Bienvenue dans votre espace
			{{ user.firstName | capitalize }}
			{{ user.lastName | capitalize}}</h1>
	</div>
	<div class="col text-center">
		{{ user.adress | capitalize }}
		{{ user.codePostal | capitalize }}
		{{ user.location | capitalize }}
	</div>

	<div class="col text-center">
		<a class="bouton" id="" href="{{ path('user_edit', {'id': app.user.id}) }}"></div>

		{% if app.user %}
			<script>
				document.getElementById('inscription').style.display = 'none';
			</script>
			<script>
				document.getElementById('connexion').style.display = 'none';
			</script>
			<script>
				document.getElementById('admin').style.display = 'none';
			</script>
		{% else %}
			<script>
				document.getElementById('inscription').style.display = 'block';
			</script>
			<script>
				document.getElementById('connexion').style.display = 'block';
			</script>
			<script>
				document.getElementById('admin').style.display = 'none';
			</script>
			<script>
				document.getElementById('deconnexion').style.display = 'none';
			</script>
			<script>
				document.getElementById('member').style.display = 'none';
			</script>
		{% endif %}
		{% if is_granted('ROLE_ADMIN') %}
			<script>
				document.getElementById('admin').style.display = 'block';
			</script>
		{% endif %}
	{% endblock %}
