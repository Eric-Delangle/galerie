{% extends 'base.html.twig' %}

{% block title %}Validez votre commande
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center mt-3">Validez votre commande</h1>
		{% for item in cart %}
			{{ item.picture.name }}
			<img src=" {{ asset(['images/toiles/', item.picture.picture]|join) }} " class="images" alt="oeuvre">
			{{ item.picture.description }}
			{{ item.picture.price // 10 }}
			â‚¬
			{{ include('purchase/_form.html.twig') }}
		{% endfor %}

	</div>
	{% if app.user %}
		<script>
			document.getElementById('inscription').style.display = 'none';
		</script>
		<script>
			document.getElementById('connexion').style.display = 'none';
		</script>
		<script>
			document.getElementById('admin').style.display = 'none';
		</script>
	{% else %}
		<script>
			document.getElementById('inscription').style.display = 'block';
		</script>
		<script>
			document.getElementById('connexion').style.display = 'block';
		</script>
		<script>
			document.getElementById('admin').style.display = 'none';
		</script>
		<script>
			document.getElementById('deconnexion').style.display = 'none';
		</script>
		<script>
			document.getElementById('member').style.display = 'none';
		</script>
	{% endif %}
	{% if is_granted('ROLE_ADMIN') %}
		<script>
			document.getElementById('admin').style.display = 'block';
		</script>
	{% endif %}
{% endblock %}
