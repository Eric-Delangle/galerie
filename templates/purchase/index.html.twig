{% extends 'base.html.twig' %}

{% block title %}Hello PurchaseController!
{% endblock %}

{% block body %}
	<div class="container text-center mt-5">
		<p>Voici vos commandes :</p>
		{% for item in purchases %}

			{{ item.fullName }}
			<p>Elle sera livrée à cette adresse :
				{{ item.address }}
				{{ item.postalCode }}
				{{ item.city }}.

			</p>


		{% else %}
			<p>Pas de commandes en cours.</p>
		{% endfor %}
		<a class="nav-link" id="member" href="{{ path('member_account') }}" tabindex="-1" aria-disabled="true">
			<i class="fas fa-home"></i>
			Votre compte</a>
	</div>
	<script>
		document.getElementById('inscription').style.display = 'none';
	</script>
	<script>
		document.getElementById('connexion').style.display = 'none';
	</script>
	<script>
		document.getElementById('admin').style.display = 'none';
	</script>
	<script>
		document.getElementById('member').style.display = 'block';
	</script>
	<script>
		document.getElementById('deconnexion').style.display = 'block';
	</script>

{% endblock %}
