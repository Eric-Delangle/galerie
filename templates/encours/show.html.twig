{% extends 'base.html.twig' %}

{% block title %}Encours
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center mt-5">En cours</h1>

		<table class="table">
			<tbody>

				<tr>
					<th>Nom</th>
					<td>{{ encour.name }}</td>
				</tr>

				<tr>
					<th>Toile</th>
					<td><img src=" {{ asset(['images/toiles/', encour.picture]|join) }} " class="imagesAgrandies" alt="oeuvre"></td>
				</tr>

				<tr>
					<th>Description</th>
					<td>{{ encour.description }}</td>
				</tr>
				<tr>
					<th>Format</th>
					<td>{{ encour.size }}</td>
				</tr>
			</tbody>
		</table>

		<button class="btn btn-primary btn-sm">
			<a href="{{ path('encours_index') }}" style="color:white; text-decoration:none;">Retour Ã  la liste.</a>
		</button>


	</div>
	{% if app.user %}
		<script>
			document.getElementById('inscription').style.display = 'none';
		</script>
		<script>
			document.getElementById('connexion').style.display = 'none';
		</script>
		<script>
			document.getElementById('admin').style.display = 'none';
		</script>
	{% else %}
		<script>
			document.getElementById('inscription').style.display = 'block';
		</script>
		<script>
			document.getElementById('connexion').style.display = 'block';
		</script>
		<script>
			document.getElementById('admin').style.display = 'none';
		</script>
		<script>
			document.getElementById('deconnexion').style.display = 'none';
		</script>
		<script>
			document.getElementById('member').style.display = 'none';
		</script>
	{% endif %}
	{% if is_granted('ROLE_ADMIN') %}
		<script>
			document.getElementById('admin').style.display = 'block';
		</script>
	{% endif %}
{% endblock %}
